module LanguageServer
  module Protocol
    module Transport
      module Io
        class Writer
          def initialize: (IO) -> void

          def write: (**untyped) -> void
                   | (Hash[Symbol, untyped]) -> void
        end

        class Reader
          def initialize: (IO) -> void

          def read: () { (untyped) -> void } -> bot
        end
      end
    end

    module Constant
      module DiagnosticSeverity
        ERROR: String

        WARNING: String

        INFORMATION: String

        HINT: String
      end
    end
  end
end
